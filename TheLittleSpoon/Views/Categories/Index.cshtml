@model IEnumerable<TheLittleSpoon.Models.Category>

@{
    ViewData["Title"] = "Index";
}
<div class="row">
    <div class="col-9">
        <h2>Browse all Categories</h2>
        <br />
    </div>
    <div class="col-3">
        <a class="btn btn-success" asp-action="Create" >Create New</a>
        <br />
    </div>
            <div class="col-9">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    <a class="btn alert-warning" asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a>
                                    <a class="btn alert-info" asp-action="Details" asp-route-id="@item.CategoryId">Details</a>
                                    <a class="btn alert-danger" asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
       
    </div>

